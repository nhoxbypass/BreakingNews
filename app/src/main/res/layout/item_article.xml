<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="4dp"
    android:id="@+id/cv_item_container"
    tools:layout_height="200dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/iv_article"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:ellipsize="end"
            android:id="@+id/tv_description"
            android:padding="4dp"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin et tellus at nibh feugiat vehicula id feugiat ex. Sed tempor orci nec egestas fermentum. Morbi iaculis, tortor eget bibendum fringilla, nisl sapien imperdiet massa, ac pulvinar eros nulla a dolor."/>

    </LinearLayout>
</android.support.v7.widget.CardView>